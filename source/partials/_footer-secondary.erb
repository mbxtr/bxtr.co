<footer id="footer">
  <section class="secondary-section">
    <header class="full-width-header"><h2>&nbsp;</h2></header>
    <div class="secondary-section-content two-columns">
      <section>
        <header class="full-width-header"><h2>About Me</h2></header>
        <article>
          <div class="content">
            <p><img src="http://placehold.it/400x400" class="u-image-left" /> I'm Matt Baxter; a designer and developer in Dallas, TX.</p>
            <p><a href="#">Read more about me Â»</a></p>
          </div>
        </article>
      </section>

      <section>
        <header class="full-width-header"><h2>Elsewhere</h2></header>
        <div class="container">
          <div class="content u-text-centered">
            <div data-load-svg="/images/social-icons.svg"></div>
            <ul class="social-icons">
              <li>
                <a href="<%= data.social.twitter %>" class="icon">
                  Twitter
                  <svg viewBox="0 0 60 60">
                    <use xlink:href="#icon-twitter"></use>
                  </svg>
                </a>
              </li>
              <li>
                <a href="<%= data.social.linkedin %>" class="icon">
                  LinkedIn
                  <svg viewBox="0 0 60 60">
                    <use xlink:href="#icon-linkedin"></use>
                  </svg>
                </a>
              </li>
              <li>
                <a href="mailto:<%= data.social.mail %>" class="icon">
                  E-mail
                  <svg viewBox="0 0 60 60">
                    <use xlink:href="#icon-mail"></use>
                  </svg>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </section>
    </div>
  </section>
  <section>
    <header class="full-width-header no-text"><h2>&nbsp;</h2></header>
    <div class="container">
      <div class="content u-text-centered">
        <a href="#" class="button">More Posts</a>
      </div>
  </section>
</footer>