<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <title><%= current_page.data.title || "bxtr.co" %></title>
    
    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
    
    <script src="//use.typekit.net/vls5wls.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
  </head>
  
  <body class="<%= page_classes %>">
    <header id="header">
      [header image]
    </header>
    <main role="main">
      <%= yield %>
    </main>
    <footer id="footer">
      [footer...]
    </footer>
  </body>
</html>