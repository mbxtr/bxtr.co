<!doctype html>
<html>
  <%= partial "partials/head" %>
  
  <body class="<%= page_classes %> secondary">
    <%= partial "partials/hex-pattern" %>
    <%= partial "partials/header" %>
    <main id="main" role="main">
      <section>
        <article class="post">
          <header class="post-header">
            <h1 class="post-title"><a href="<%= current_article.url %>"><%= current_article.title %></a></h1>
            <div class="post-meta"><time><%= current_article.date.strftime("%B %e, %Y") %></time></div>
          </header>
          <div class="post-content">
            <%= yield %>
          </div>
        </article>
      </section>
    </main>
    <%= partial "partials/footer-post" %>
  </body>
</html>