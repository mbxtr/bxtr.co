      <header class="entry-header">
        <h3 class="entry-title"><a href="<%= article.url %>"><%= article.title %></a></h3>
        <div class="entry-meta"><time><%= article.date.strftime("%B %e, %Y") %></time></div>
      </header>
      <div class="entry-teaser"><%= Nokogiri::HTML(article.summary(200, '&hellip;')).text %></div>
